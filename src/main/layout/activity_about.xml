<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shivangi.travelandtourism.About"
    android:weightSum="1"
    android:background="@color/design_fab_shadow_mid_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="                     About Us"
        android:id="@+id/textView2"
        android:hint="HereWeGo"
        android:background="#feafaf"
        android:fontFamily="@string/abc_action_menu_overflow_description"
        android:layout_weight="0.90"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />
    <TextView
        android:layout_width="337dp"
        android:layout_height="300dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="HereWeGo Inc. is an Indian online travel company,founded by Sudipta Sarkar,Santanu Singha,Supratim Ghosh,Sandip Mukherjee And Shivangi Majumder in 2016, Headquartered in Kolkata, West Bengal, the company provides online travel services including holiday packages, hotel reservation.
\n\n\n\n\nCopyright Â©HereWeGo
\nAll Rights Reserved"
        android:id="@+id/textView3"
        android:hint="HereWeGo"
        android:background="@color/highlighted_text_material_dark"
        android:fontFamily="@string/abc_action_menu_overflow_description"
        android:layout_gravity="top|center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
